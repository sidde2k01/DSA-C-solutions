/* input - Input String
*  output - Save the result in the output array (passed as argument). You donâ€™t have to 
*  print or return the result
*/
#include<climits>
void minLengthWord(char input[], char output[]){
		
	int length=INT_MAX;
    int i=0;
    int j=0;
    while(input[j]!='\0'){
        j=i;
        while(input[j]!=' '&&input[j]!='\0'){
            j++;
        }
        int currlength=j-i;    //
        if(length>currlength){
            length=currlength;
            int count=0;
            for(int k=i;k<j;k++){
                output[count]=input[k];
                count++;
            }
            output[count]='\0';
            
        }
        if(input[j]=='\0'){
            break;
        }
        i=j+1; 
    }
}


