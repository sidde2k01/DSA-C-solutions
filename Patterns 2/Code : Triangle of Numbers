#include <iostream>
using namespace std;

int main() {
    int n;
    cin>>n;
    int i=1;
    while(i<=n){
        int count=1;
        while(count<=n-i){
            cout<<" ";
            count++;
        }
        int j=i;
        int k=1;
        while(k<=i){
            cout<<j;
            j++;
            k++;
        }
        j=j-2;
        k=1;
        while(k<=i-1){
            cout<<j;
            j--;
            k++;
        }
        cout<<endl;
        i++;
    }
    
}
