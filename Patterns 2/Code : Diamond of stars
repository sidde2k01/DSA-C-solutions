#include<iostream>
using namespace std;
int main() {
    int n;
    cin>>n;
    int n1=(n+1)/2;
    int n2=n1-1;
    int i=1;
    while(i<=n1){
        int count=1;
        while(count<=n1-i){
            cout<<" ";
            count++;
        }
        int j=1;
        while(j<=2*i-1){
            cout<<"*";
            j++;
        }
        cout<<endl;
        i++;
    }
    i=n1-1;
    int counter=1;
    while(counter<=n2){
        int count=1;
        while(count<=n2-i+1){
            cout<<" ";
            count++;
        }
        int j=1;
        while(j<=2*i-1){
            cout<<"*";
            j++;
        }
        cout<<endl;
        i--;
        counter++;
    }
}
