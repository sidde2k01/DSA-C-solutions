#include<iostream>
using namespace std;


int main(){

    int n;
    cin>>n;
    int i=1;
    int val=1;
    int count=1;
    while(i<=n){
        int k=1;
        while(k<=n-i){
            cout<<" ";
            k++;
        }
        count=1;
        val=i;
        while(count<=i){
            cout<<val;
            val++;
            count++;
        }
        cout<<endl;
        i++;
    }
}


